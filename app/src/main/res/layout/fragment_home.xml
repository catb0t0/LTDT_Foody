<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#E5E5E5"
    android:layout_height="match_parent"
    android:weightSum="11"
    tools:context=".fragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgViewHomeMenu_Main"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="69px"
            android:src="@drawable/menu" />

        <ImageView
            android:layout_marginLeft="234px"
            android:id="@+id/txtViewLogo_Main"
            android:layout_gravity="center"
            android:layout_width="351px"
            android:layout_height="149px"
            android:src="@drawable/logotasty"/>

    </LinearLayout>

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="951px"
        android:layout_height="144px"
        android:layout_gravity="center"
        android:background="@drawable/bg_search_view"
        android:elevation="5sp"
        android:queryHint="Tìm kiếm..."
        android:layout_weight="1"
        android:layout_marginBottom="8dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="443px"
                android:layout_height="340px"
                android:src="@drawable/img1_main" />

            <ImageView
                android:layout_width="477px"
                android:layout_height="340px"
                android:src="@drawable/img2_main"/>
            <ImageView
                android:layout_width="477px"
                android:layout_height="340px"
                android:src="@drawable/img3_main"/>

        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/layoutHamburger"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imghumberger_main" />

        <ImageView
            android:id="@+id/layoutTeamilk"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imgtrasua_main" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/layoutIcecream"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imgkem_main" />

        <ImageView
            android:id="@+id/layoutRice"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imgcom_main" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layoutCake"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imgbanh_main" />

        <ImageView
            android:id="@+id/layoutWater"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src= "@drawable/imgnuoc_main" />
    </LinearLayout>

</LinearLayout>